{
  "pluginName": "Title",
  "version": "3.0.0",
  "description": "Adds a title to the main page",
  "author": "Slak44",
  "webpackConfig": "../plugin.webpack.config.js",
  "settings": [
    {
      "name": "Title Text",
      "desc": "The text to be displayed",
      "type": "text",
      "default": "",
      "value": "",
      "isVisible": true
    },
    {
      "name": "Alignment",
      "desc": "Which section to use: left, center, or right",
      "type": "enum",
      "valid": [
        {
          "name": "Left",
          "value": "left"
        },
        {
          "name": "Center",
          "value": "center"
        },
        {
          "name": "Right",
          "value": "right"
        }
      ],
      "default": "left",
      "value": "",
      "isVisible": true
    },
    {
      "name": "Order in section",
      "desc": "The elements in a section are ordered based on this value (small values come first)",
      "type": "number",
      "default": 0,
      "value": "",
      "isVisible": true
    }
  ],
  "js": {
    "main": "main.js"
  }
}
